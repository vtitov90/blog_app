<%- include("partials/header.ejs") %>
<div class="container-create">
  <div class="form">
    <form action="/submit-edit" method="POST">
      <label for="title" class="form-label">Post title</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-input"
        placeholder="Enter title of the post"
        value="<%=post.title%>"
      />
      <label for="content" class="form-label">Content</label>
      <textarea
        id="content"
        name="content"
        class="form-textarea"
        placeholder="Enter content of the post"
      >
<%=post.content%></textarea
      >
      <label for="image" class="form-label">Edit image</label>
      <% if(post.image) {%>
      <img
        class="post-img"
        src="https://picsum.photos/760?random=$<%=post.id%>"
        alt="<%= post.title%>"
      />
      <%}%>
      <input type="file" id="image" name="image" class="form-input" />
      <input type="submit" value="Edit post" class="form-button" />
      <input type="hidden" name="id" value="<%=post.id %>" />
    </form>
  </div>
</div>
<%- include("partials/footer.ejs") %>
